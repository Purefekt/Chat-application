<Window x:Class="Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat" Height="400" Width="400" Loaded="ChatWindowLoaded" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="txtStatus" HorizontalAlignment="Left" Height="183" Margin="16,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="483"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="61" Margin="16,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="323" PreviewMouseLeftButtonDown="txtMessage_PreviewMouseLeftButtonDown"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="61" Margin="344,239,0,0" VerticalAlignment="Top" Width="80" Click="btnSend_Click"/>
        <TextBox x:Name="txtHost" HorizontalAlignment="Left" Height="17" Margin="100,23,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="126" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="txtPort" HorizontalAlignment="Left" Height="17" Margin="289,23,0,0" TextWrapping="Wrap" Text="1111" VerticalAlignment="Top" Width="58" HorizontalContentAlignment="Center" HorizontalScrollBarVisibility="Auto"/>
        <Label Content="Host IP:" HorizontalAlignment="Left" Height="27" Margin="38,19,0,0" VerticalAlignment="Top" Width="56" RenderTransformOrigin="0.299,0.548"/>
        <Label Content="Port:" HorizontalAlignment="Left" Height="27" Margin="245,19,0,0" VerticalAlignment="Top" Width="39"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Height="21" Margin="370,21,0,0" VerticalAlignment="Top" Width="68" Click="btnConnect_Click"/>
        <Button Content="Browse" HorizontalAlignment="Left" Height="60" Margin="429,240,0,0" VerticalAlignment="Top" Width="70" Click="btnBrowse_Click"/>
        <ListBox Name="listbox" HorizontalAlignment="Left" Height="249" Margin="514,51,0,0" VerticalAlignment="Top" Width="153"/>
        <Label Content="List of All Users:" HorizontalAlignment="Left" Height="27" Margin="514,19,0,0" VerticalAlignment="Top" Width="153" RenderTransformOrigin="0.299,0.548"/>
    </Grid>
</Window>
