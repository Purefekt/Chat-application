<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Grid>
        <!--Split grid in 2 rows-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Background color and rounded corners-->
        <Border CornerRadius="15" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#02aab0" Offset="0.0"/>
                    <GradientStop Color="#00cdac" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--Stackpanel Row 0-->
        <StackPanel Grid.Row="0">
            <!--Close button-->
            <Button Click="CloseButton_Click"
                    Height="40"
                    Width="40"
                    Content="╳"
                    FontSize="20"
                    Margin="440 10 0 0"/>
            
            <!--LOGIN title-->
            <TextBlock Text="LOGIN"
                       FontFamily="Helvetica"
                       FontWeight="Medium"
                       FontSize="50"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!--StackPanel Row 1-->
        <StackPanel Grid.Row="1">
            <!--Username-->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="usernameBox"
                         FontFamily="Helvetica"
                         FontWeight="Light"
                         FontSize="22"
                         Text="Username"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         HorizontalContentAlignment="Left"
                         Opacity="0.5"
                         Height="25"
                         Width="275"
                         Margin="100 0 0 0"
                         PreviewMouseLeftButtonDown="ClearUsername"
                    />
                <Image Source="/Images/username.png" Width="25"/>

            </StackPanel>
            <!--Underline for username-->
            <Border Width="300"
                    Height="2"
                    Background="White"
                    Opacity="1"/>

            <!--Password-->
            <StackPanel Orientation="Horizontal">
                <PasswordBox 
                         x:Name="passwordBox"
                         FontFamily="Helvetica"
                         FontWeight="Light"
                         FontSize="22"
                         Password="Username"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Center"
                         HorizontalContentAlignment="Left"
                         Opacity="0.5"
                         Height="25"
                         Width="275"
                         Margin="100 0 0 0"
                         PreviewMouseLeftButtonDown="ClearPassword"
                    />
                <Image Source="/Images/password.png" Width="25"/>
            </StackPanel>

            <!--Underline for password-->
            <Border Width="300"
                    Height="2"
                    Background="White"
                    Opacity="1"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
                <Button Click="Login"
                        Width="100"
                        Height="40"
                        Content="LOGIN"
                        Margin="100 0 0 0"/>
                <Button Click="UserForm"
                        Width="100"
                        Height="40"
                        Content="REGISTER"
                        Margin="100 0 100 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>